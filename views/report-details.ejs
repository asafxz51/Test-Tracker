<% layout('layouts/boilerplate') %>

 <div class="container">
  <nav class="navbar">
      <a href="/">
        <img class="brand" src="/images/asaf-zuriel-high-resolution-logo-transparent.png" alt="">
      </a>
   <a href="/" class="logo">Test Tracker ðŸ“‹â€‹</a>
   <div class="nav-links">
    <a href="/">Back to Dashboard</a>
    <a href="/logout" class="button button-secondary">Logout</a>
   </div>
  </nav>

  <div class="report-detail-container">
   <div class="page-header">
    <h1>
     <%= report.title %>
    </h1>
   </div>
   <div class="detail-meta">
    <span class="badge status-<%= report.status.replace(' ', '') %>">
     <%= report.status %>
    </span>
    <span class="badge priority-<%= report.priority %>">
     <%= report.priority %>
    </span>
    <span>Created on: <%= new Date(report.creationDate).toLocaleDateString() %></span>
   </div>
 <div class="report-details-box">
   <p><b>Type: </b><%= report.type %></p>
   <p><b>Preconditions: </b><%= report.preconditions %></p>
   <p><b>Expected Result: </b><%= report.expected %></p>
   <p><b>Actual Result: </b><%= report.actual %></p>
</div>
<div class="report-description-box">
<p class="preserve-lines"><%= report.description %></p>
  </div>
   <div class="report-actions">
    <a href="/edit/<%= report._id %>" class="button">Edit Report</a>
   
    <form action="/delete/<%= report._id %>" method="POST"
     onsubmit="return confirm('Are you sure you want to delete this report? This action cannot be undone.');">
     <button type="submit" class="button button-danger">Delete Report</button>
    </form>
   </div>
  </div>
 </div>
